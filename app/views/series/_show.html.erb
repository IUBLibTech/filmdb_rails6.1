<div id="fields">
  <div class="lb"><b>Series Name</b></div><div class="fd"><%= @series.title %></div>
  <div class="lb"><b>Series Production Number</b></div><div class="fd"><%= @series.production_number %></div>
  <div class="lb"><b>Series Dates</b></div><div class="fd"><%= @series.date %></div>
  <div class="lb"><b>Total Episodes</b></div><div class="fd"><%= @series.total_episodes %></div>
</div>
<div id="sum_div">
  <div><b>Summary</b></div>
  <div>
    <%= @series.summary %>
  </div>
</div>

<% if @series.accompanying_documentations.size > 0 %>

<h4>Accompanying Documentation</h4>
  <div class="flex_wrap">
    <% @series.accompanying_documentations.each do |ad| %>
      <%= render partial: 'accompanying_documentations/ad_preview', locals: { ad: ad, css: 'raised_series'}  %>
    <% end %>
  </div>
<% end %>