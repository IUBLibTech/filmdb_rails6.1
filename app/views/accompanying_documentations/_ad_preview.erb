<div class="ad">
<%= link_to accompanying_documentation_path(ad) do %>
  <div class="ad _ad <%= css %>">
    <h6><%= css == "raised_po" ? "Physical Object" : (css == "raised_title" ? "Title" : "Series") %></h6>
    <div class="flex_column">
      <div class="flex_row">
        <label class="fr">Location</label>
        <div >
          <%= ad.location %>
        </div>
      </div>
      <div class="flex_row">
        <label class="fr">Description</label>
      </div>
      <div class="flex_row flex_row_desc">
        <%= ad.description %>
      </div>
      <div class="flex_row">
        <label class="fr">Photo Link</label>
        <div >
          <% unless ad.photo_link.blank? %>
            <label class="fr"><%= ad.photo_link %></label>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
